    meta(name="application-name", content="Chamsocial")
    meta(name="msapplication-TileColor", content="#0086db")
    meta(name="msapplication-TileImage", content="/mstile-144x144.png")

  body(ng-class="{'menu-open': menuOpen}")

    .page-wrapper
      include parts/header

      .container.main
        block content

      .overlay(ng-click="toggleMenu()")

      include parts/footer


    .menu-wrapper(ng-click="toggleMenu()")
      .main-menu
        .menu-title= __('MENU')
        ul
          li
            a(ui-sref="app.home")= __('HOME')
          li
            a(ui-sref="app.about")= __('ABOUT')
          li(ng-hide="main.user")
            a(ui-sref="app.signup")= __('SIGN_UP')
          li(ng-hide="main.user")
            a(ui-sref="app.login")= __('LOGIN')
          li(ng-show="main.user")
            a(ui-sref="app.settings_user")= __('SETTINGS')
          li(ng-show="main.user")
            a(ui-sref="app.logout")= __('LOGOUT')


    script(src="/js/lib/rollbar.js")

    //- Angular
    script(src="/components/angular/angular.min.js")
    script(src="/components/angular-animate/angular-animate.min.js")
    script(src="/components/angular-resource/angular-resource.min.js")
