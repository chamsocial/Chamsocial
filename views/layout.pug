    script(src="/components/ui-router/release/angular-ui-router.min.js")
    //- auto grow textareas
    script(src="/components/angular-elastic/elastic.min.js")
    //- Nice looking select boxes and multi-select
    script(src="/components/angular-ui-select/dist/select.min.js")
    //- pagination
    script(src="/js/lib/ui-bootstrap/ui-bootstrap-custom-tpls-0.13.3.min.js")


    //- 3-party Standalone

    //- Plupload (uploads)
    script(src="/components/plupload/js/plupload.full.min.js")
    //- Moment.js (to handle dates in js)
    script(src="/components/moment/min/moment.min.js")

    script(src="/components/baguettebox.js/dist/baguetteBox.min.js")


    //- minified
